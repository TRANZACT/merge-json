<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFrameworks>net6.0;net7.0;net8.0</TargetFrameworks>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <PropertyGroup>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>mergejson</ToolCommandName>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  	<Product>MergeJson</Product>
  	<Title>MergeJson</Title>
  	<RootNamespace>MergeJson</RootNamespace>
  	<AssemblyName>MergeJson</AssemblyName>
  	<Version>0.0.0</Version>
  	<PackageId>MergeJson</PackageId>
  	<RepositoryType>git</RepositoryType>
  	<RepositoryUrl>https://github.com/TRANZACT/merge-json</RepositoryUrl>
  	<PackageDescription>
  		dotnet tool that merges a source JSON file into a target JSON file.
  	</PackageDescription>
  </PropertyGroup>

</Project>
